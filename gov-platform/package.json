{
  "name": "gov-platform",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/gov-portal/*",
    "packages/gov-portal/modules/*",
    "packages/gov-portal/styles",
    "packages/gov-portal/ui-engine",
    "packages/gov-portal/data"
  ],
  "engines": { "node": ">=20" },

  "scripts": {
    "//---------------- Dev (single port) ----------------": "────────",
    "dev": "node -e \"require('child_process').spawn('vite', { cwd: 'apps/uk-portal', stdio: 'inherit', shell: true })\"",

    "//---------------- Build (libs then app) ------------": "────────",
    "build:core": "node -e \"require('child_process').spawn('vite', ['build'], { cwd: 'packages/gov-portal/core', stdio: 'inherit', shell: true })\"",
    "build:ui-engine": "node -e \"require('child_process').spawn('vite', ['build'], { cwd: 'packages/gov-portal/ui-engine', stdio: 'inherit', shell: true })\"",
    "build:data": "node -e \"require('child_process').spawn('vite', ['build'], { cwd: 'packages/gov-portal/data', stdio: 'inherit', shell: true })\"",
    "build:modules": "node scripts/build-modules.js",
    "build:app": "node -e \"require('child_process').spawn('vite', ['build'], { cwd: 'apps/uk-portal', stdio: 'inherit', shell: true })\"",
    "build": "npm run build:core && npm run build:ui-engine && npm run build:data && npm run build:modules && npm run build:app",

    "//---------------- Preview (built app) --------------": "────────",
    "preview": "node -e \"require('child_process').spawn('vite', ['preview','--strictPort'], { cwd: 'apps/uk-portal', stdio: 'inherit', shell: true })\"",

    "//---------------- Utilities -----------------------": "────────",
    "clean": "node tools/cli/clean.mjs",
    "clean:portal": "rimraf apps/*/dist packages/gov-portal/*/dist packages/gov-portal/modules/*/dist",
    "dedupe": "yarn yarn-deduplicate -s fewer yarn.lock",
    "postinstall": "yarn run dedupe",
    "ws:info": "yarn workspaces info",
    "test": "yarn workspaces run test || true",

    "//------ Optional tooling --------------------------": "────────",
    "create:module": "node tools/cli/create-module.mjs",
    "trace:resolve": "node scripts/trace-ui-engine-resolve.cjs",
    "build:auth:trace": "cd packages/gov-portal/modules/auth && vite build"
  },

  "dependencies": {
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.5",
    "@mui/material": "5.15.20",
    "@mui/icons-material": "5.15.20",
    "@mui/system": "5.15.20",
    "@mui/x-date-pickers": "^5",
    "sass-embedded": "^1.90.0",
    "@hookform/resolvers": "^3.3.4",
    "@reduxjs/toolkit": "^2.2.1",
    "@sentry/react": "^7.118.0",
    "@sentry/tracing": "^7.118.0",
    "@tanstack/react-query": "^4.36.1",
    "axios": "^1.11.0",
    "dayjs": "^1.11.18",
    "lodash": "^4.17.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.52.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "5.3.4",
    "redux-persist": "^6.0.0",
    "zod": "^3.23.8"
  },

  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "vite": "^5.3.1",
    "yarn-deduplicate": "^6.0.2"
  },

  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.5",
    "@emotion/use-insertion-effect-with-fallbacks": "1.0.1",
    "@mui/material": "5.15.20",
    "@mui/icons-material": "5.15.20",
    "@mui/system": "5.15.20"
  }
}
